<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:tag="cards main container">

    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="465dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true" card_view:cardBackgroundColor="@color/cardview_light_background"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            card_view:layout_constraintRight_toRightOf="parent" tools:layout_constraintLeft_creator="1"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            card_view:layout_constraintTop_toTopOf="parent" android:layout_gravity="center"
            android:layout_marginTop="8dp" card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" card_view:cardCornerRadius="2dp"
            card_view:layout_constraintVertical_bias="0.0" card_view:layout_constraintHorizontal_bias="0.0">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="6dp">

            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewTitle"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    card_view:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" android:layout_marginLeft="8dp"
                    card_view:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
                    card_view:layout_constraintRight_toRightOf="parent"/>
            <ImageView
                    android:id="@+id/imageView"
                    android:tag="image_tag"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/content_description"
                    android:layout_marginLeft="8dp"
                    card_view:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
                    card_view:layout_constraintRight_toRightOf="parent" android:layout_marginTop="9dp"
                    card_view:layout_constraintTop_toBottomOf="@+id/textViewTitle"
                    card_view:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" android:textColor="@color/colorPrimaryDark"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp" android:layout_marginLeft="8dp"
                    card_view:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
                    card_view:layout_constraintRight_toRightOf="parent" android:layout_marginTop="8dp"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView"
                    card_view:layout_constraintVertical_bias="0.0" card_view:layout_constraintHorizontal_bias="0.502"/>
            <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    card_view:fabSize="normal"
                    android:id="@+id/floatingActionButton"
                    card_view:srcCompat="@mipmap/ic_fab_web"
                    card_view:elevation="4dp"
                    android:layout_marginLeft="8dp" card_view:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp" card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    card_view:layout_constraintHorizontal_bias="1.0" card_view:layout_constraintVertical_bias="1.0"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>